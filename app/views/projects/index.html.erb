<h1>Задачи</h1>
<div class="row">
    <% @projects.each do |project| %>
    <div class="project col-lg-3 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-11 col-sm-offset-1 col-xs-11 col-xs-offset-1">
        <h4><%= project.title %></h4>
        <hr />
        <ul style="list-style: none;">
            <% project.todos.each do |todo| %>
                <label class="s" data-flag=<%= todo.isCompleted %>><li><input type="checkbox"><span class="text"><%= todo.text %><span></li></label>
    <!--             <li><%#= todo.isCompleted %></li> -->
            <% end %> 
        </ul>
    </div>   
    <% end %>
</div>

<a id="plus" href="#">+</a>

<div id="addTodo">
    <div class="header">Новая задача</div>
    <hr />
    <%= form_with scope: :todo, url: todos_path, local: true do |entry| %>
    <div class="textField"> <%= entry.text_area :text,  :placeholder => 'Название задачи...'%> </div>
    <div class="selectField"> <%= entry.select :project_id, Project.all.pluck(:title, :id), {class: "form-control"}%> </div>
    <!--<select id="e1">
        <option value="volvo">Volvo</option>
