        <option value="mercedes">Mercedes</option>
        <option value="audi">Audi</option>
    </select> -->
        
    <p>
        <a class="button" id="cancel" href="">Отмена</a>
        <a class="button" id="submit" href="#"> ОК </a>
    </p>
    <% end %>
</div>

